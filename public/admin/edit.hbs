<style>
    /*
 *  Flex Layout Specifics
*/

    main {
        display: flex;
        flex-direction: row;
    }

    .round {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 200px;
        list-style: none;
        padding: 0;
    }

    .round .spacer {
        flex-grow: 1;
    }

    .round .spacer:first-child,
    .round .spacer:last-child {
        flex-grow: .5;
    }

    .round .game-spacer {
        flex-grow: 1;
    }

    /*
 *  General Styles
*/

    body {
        font-family: sans-serif;
        font-size: small;
        padding: 10px;
        line-height: 1.4em;
    }

    li.game {
        padding-left: 20px;
    }

    li.game.winner {
        font-weight: bold;
    }

    li.game span {
        float: right;
        margin-right: 5px;
    }

    li.game-top {
        border-bottom: 1px solid #aaa;
    }

    li.game-spacer {
        border-right: 1px solid #aaa;
        min-height: 40px;
    }

    li.game-bottom {
        border-top: 1px solid #aaa;
    }
</style>

<h1>{{title}}</h1>
<form>
    <div class="form-group">
        <label for="authorId">Tournament ID</label>
        <input type="text" class="form-control" id="authorId" aria-describedby="authorIdHelp" placeholder="Enter Tournament id" value={{data.id}}>
        <input type="hidden" id="quoteId" value="{{data.id}}" />
        <small id="authorIdHelp" class="form-text text-muted">Can be empty</small>
    </div>
    <div class="form-group">
        <label for="quote">Tournament name</label>
        <textarea class="form-control" id="quote" aria-describedby="quoteHelp" placeholder="Enter Tournament name">{{data.tname}}</textarea>
    </div>
    <div class="form-group">
        <label for="category">Capacity</label>
        <input type="text" class="form-control" id="category" aria-describedby="categoryHelp" placeholder="Enter Capacity" value={{data.capacity}}>
    <div class="form-group">
        <label for="quote">Status</label>
 <div><select id="status">
  <option value="Waiting for players">Waiting for players</option>
  <option value="Ended">Ended</option>
  <option value="Live">Live</option>
  <div>
</select> </div>    </div>

<main id="tournament">
    <ul class="round round-1">
        {{#each round1}}
        <li class="spacer">&nbsp;</li>
        <li class="game game-top">{{Team1_name}}</li>
        <li class="game game-spacer">&nbsp;</li>
        <li class="game game-bottom">{{Team2_name}}</li>
        {{/each}}
        <li class="spacer">&nbsp;</li>
    </ul>
    <ul class="round round-2">
        {{#if round2}}
            <li class="spacer">&nbsp;</li>
            <li class="game game-top">
                <span id="round1Aid" hidden>{{round1.0.id}}</span>
                <select id="round1WinnerA" class="round1Winners">
                    <option value={{round1.1.Winner_id}}>{{round1.0.Winner}}</option>
                    <option value={{round1.0.Team_id_home}}>{{round1.0.Team1_name}}</option>
                    <option value={{round1.0.Team_id_away}}>{{round1.0.Team2_name}}</option>
                </select>
            </li>
            <li class="game game-spacer">&nbsp;</li>
            <li class="game game-bottom ">
                <span id="round1Bid" hidden>{{round1.1.id}}</span>
                <select id="round1WinnerB" class="round1Winners">
                    <option value={{round1.1.Winner_id}}>{{round1.1.Winner}}</option>
                    <option value={{round1.1.Team_id_home}}>{{round1.1.Team1_name}}</option>
                    <option value={{round1.1.Team_id_away}}>{{round1.1.Team2_name}}</option>
                </select>
            </li>
        {{else}}
            <li class="spacer">&nbsp;</li>
            <li class="game game-top">
                <span id="round1Aid" hidden>{{round1.0.id}}</span>
                <select id="round1WinnerA" class="round1Winners">
                    <option>Select winner</option>
                    <option value={{round1.0.Team_id_home}}>{{round1.0.Team1_name}}</option>
                    <option value={{round1.0.Team_id_away}}>{{round1.0.Team2_name}}</option>
                </select>
            </li>
            <li class="game game-spacer">&nbsp;</li>
            <li class="game game-bottom ">
                <span id="round1Bid" hidden>{{round1.0.id}}</span>
                <select id="round1WinnerB" class="round1Winners">
                    <option>Select winner</option>
                    <option value={{round1.1.Team_id_home}}>{{round1.1.Team1_name}}</option>
                    <option value={{round1.1.Team_id_away}}>{{round1.1.Team2_name}}</option>
                </select>
            </li>
        {{/if}}
        <li class="spacer">&nbsp;</li>
    </ul>
    <ul class="round round-3">
        <li class="spacer">&nbsp;</li>
        <li class="game game-top">
            <span id="round2id" hidden>{{round2.0.id}}</span>
            <select id="round2Winner" class="round2Winners">
                {{#if round2}}
                    <option value={{round2.0.Winner_id}}>{{round2.0.Winner}}</option>
                    <option id="round2WinnerA" value={{round2.0.Team_id_home}}>{{round2.0.Team1_name}}</option>
                    <option id="round2WinnerB" value={{round2.0.Team_id_away}}>{{round2.0.Team2_name}}</option>
                {{else}}
                    <option>Select winner</option>
                    <option id="round2WinnerA"></option>
                    <option id="round2WinnerB"></option>
                {{/if}}
            </select>
        </li>
        <li class="spacer">&nbsp;</li>
    </ul>
</main>

    <div class="form-group">
        <button id="saveButton" class="btn btn-primary">Save</button>
        <button id="cancelButton" class="btn btn-secondary">Cancel</button>
    </div>
    <div class="form-group">
        <input id="id" type="text" class="form-control" aria-describedby="idHelp" disabled>
        <small id="idHelp" class="form-text text-muted">You'll get this back after new one is created.</small>
    </div>
</form>

<script>
    $(document).ready(function() {
        $("#cancelButton").on('click', function(e) {
            e.preventDefault();
            window.location.href = "/admin";
        });
        $("#saveButton").on('click', function(e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: "/admin/edit",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify({
                    "id": $("#authorId").val(),
                    "edit":$("#quoteId").val(),
                    "tname": $("#quote").val(),
                    "capacity": $("#category").val(),
                    "status":$("#status option:selected" ).val(),
                    "playercount":0
                }),
                success: function(data, status) {
                    $("#id").val(data.id);
                    window.location.href = "/admin";
                },
                error: function(xhr, status, error) {
                    console.error(xhr.responseText);
                },
                complete: function(data, status) { //optional, used for debugging purposes
                    //console.log(status);
                }
            });
        });
        $("#round1WinnerA").on('change', function() {
            $("#round2WinnerA").html($("#round1WinnerA option:selected").text());
            $("#round2WinnerA").val($("#round1WinnerA").val());
        });
        $("#round1WinnerB").on('change', function() {
            $("#round2WinnerB").html($("#round1WinnerB option:selected").text());
            $("#round2WinnerB").val($("#round1WinnerB").val());
        });
    });
</script>